@using OnlineShop.Models
@model IEnumerable<ProductViewModel>

<div class="content-mid" id="searchresults">
    <h3>@Html.Label("Результаты поиска") </h3>
    <label class="line"></label>
    <div class="mid-popular">
        @foreach (var item in Model)
        {
            <div class="col-md-3 item-grid simpleCart_shelfItem">
                <div class="mid-pop">
                    <div class="pro-img">
                        <img class="img-responsive" src="@item.Images[0].Substring(1).Insert(0, "../..")" alt="">
                        <div class="zoom-icon ">
                            <a class="picture b-link-stripe b-animate-go  thickbox" href="@item.Images[0].Substring(1)" rel="title" ><i class="glyphicon glyphicon-search icon "></i></a>
                        </div>
                    </div>
                    <div class="mid-1">
                        <div class="women">
                            <div class="women-top">
                                <span>@item.Catalog </span>
                                <h6><a href="single.html">@item.Title</a></h6>
                            </div>
                            <div class="img item_add">
                                <a href="#"><img src="~/Content/images/layer/ca.png" alt=""></a>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="mid-2">
                            <p>@if (@item.Discount > 0)
                            {<label>@item.PriceWithoutDiscount грн</label>}<em class="item_price">@Html.DisplayFor(model => item.Price) грн</em></p>
                            <div class="block">
                                <div class="starbox small ghosting"> </div>
                            </div>

                            <div class="clearfix"></div>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
