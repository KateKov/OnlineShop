                                                        <li>@Html.ActionLink("Брюки", "Index", "Home")</li>
                                                        <li>@Html.ActionLink("Свитера", "Index", "Home")</li>

                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="col1">
                                                <div class="h_nav">
                                                    <h4>@Html.Label("Аксессуары")</h4>
                                                    <ul>
                                                        <li>@Html.ActionLink("Сумки и рюкзаки", "Index", "Home")</li>
