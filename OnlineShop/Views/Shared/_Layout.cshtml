                                        <div class="dropdown-menu ">
                                            <div class="menu-top">
                                                <div class="col1">
                                                    <div class="h_nav">
                                                        <h4>@Html.Label("Одежда")</h4>
                                                        <ul>
                                                            <li>@Html.ActionLink("Фубтолки и поло", "Index", "Products", new { subcategory="Футболки и поло"}, null)</li>
                                                            <li>@Html.ActionLink("Платья и сарафаны", "Index", "Home")</li>
                                                            <li>@Html.ActionLink("Брюки", "Index", "Home")</li>
                                                            <li>@Html.ActionLink("Юбки", "Index", "Home")</li>
                                                            <li>@Html.ActionLink("Джинсы", "Index", "Home")</li>
                                                            <li>@Html.ActionLink("Пиджаки и костюмы", "Index", "Home")</li>
                                                            <li>@Html.ActionLink("Блузы, рубашки", "Index", "Home")</li>
                                                            <li>@Html.ActionLink("Свитера", "Index", "Home")</li>

                                                        </ul>
                                                    </div>
                                                </div>
                                                <div class="col1">
                                                    <div class="h_nav">
                                                        <h4>@Html.Label("Аксессуары")</h4>
                                                        <ul>
                                                            <li>@Html.ActionLink("Сумки и рюкзаки", "Index", "Home")</li>
                                                            <li>@Html.ActionLink("Головные уборы", "Index", "Home")</li>
                                                            <li>@Html.ActionLink("Кошельки", "Index", "Home")</li>
                                                            <li>@Html.ActionLink("Очки", "Index", "Home")</li>
                                                            <li>@Html.ActionLink("Украшения, часы", "Index", "Home")</li>
