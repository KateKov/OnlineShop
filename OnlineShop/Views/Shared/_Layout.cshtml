            @Styles.Render("~/Content/css")
            @Scripts.Render("~/bundles/vendors")



            
           @RenderSection("search", false)
                <div class="cart box_1">
                    <a href="checkout.html">
                        <h3>
                            <div class="total">
                                <span class="simpleCart_total"> @Html.ActionLink("Корзина", "Index", "Home")</span>
                            </div>
                            <img src="~/Content/images/layer/cart.png" alt="" />
                        </h3>
                    </a>
                    <p><a href="javascript:;" class="simpleCart_empty"></a></p>

                </div>
                <div class="clearfix"> </div>
            
                <!----->
            </div>
        <div id="results"></div>
        @RenderBody()
            <div class="clearfix"></div>
            </div>
   
    
            
 
    
        
                                
