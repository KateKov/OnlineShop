                                                        <li>@Html.ActionLink("Кошельки", "Index", "Home")</li>
                                                        <li>@Html.ActionLink("Очки", "Index", "Home")</li>
                                                        <li>@Html.ActionLink("Часы", "Index", "Home")</li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="clearfix"></div>
                                        </div>
                                    </div>
                                </li>
                                <li class="color3">@Html.ActionLink("Про магазин", "Index", "Home")</li>
                                <li class="color4"> @Html.ActionLink("Контакты", "Index", "Home")</li>
                                
                            </ul>
                        </div>
