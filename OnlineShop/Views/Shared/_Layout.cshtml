                                <li class="dropdown mega-dropdown active">
                                    <a class="color2" href="#" class="dropdown-toggle" data-toggle="dropdown">@Html.Label("Для мужчин")<span class="caret"></span></a>
                                    <div class="dropdown-menu mega-dropdown-menu">
                                        <div class="menu-top">
                                            <div class="col1">
                                                <div class="h_nav">
                                                    <h4>@Html.Label("Одежда")</h4>
                                                    <ul>
                                                        <li>@Html.ActionLink("Фубтолки, майки", "Index", "Home")</li>
